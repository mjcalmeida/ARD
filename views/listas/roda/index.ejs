<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<link rel="stylesheet" href="/bootstrap-4.5.2-dist/css/bootstrap.css">
<body>
    <hr>
    <div class="container">
        <div class="card">
            <div class="card-header"><h3>Roda de Cura ( <%= dataEvento %> )</h3></div>
            
            <div class="card-body">
                <a href="../pessoas/cadRodaDia/<%= dataEventoSelecao %>" class="btn btn-primary" style="margin-bottom: 15px;">Nova Pessoa</a>
                <div class="row">
                    <div class="col-1">#</div>
                    <div class="col">Nome</div>                    
                    <div class="col-2">Contribuição</div>
                    <div class="col">Observações</div>
                    <div class="col-1">Ação</div>
                </div>
                <hr>
                <% eventosRoda.forEach(evento => {  %>
                <form method="POST" action="../listas/cadPresenca">
                        <div class="row">
                            <div class="col-1">
                                <input type="hidden" name="pessoaId"   value="<%= evento.pessoaId %>"/>
                                <input type="hidden" name="eventoId"   value="<%= evento.eventoId %>"/>
                                <input type="hidden" name="dataEvento" value="<%= dataEvento %>"/>
                                                                
                                <input type="checkbox" name="presenca" <%= evento.presenca == 1 ? "checked" : "" %>/>
                            </div>
                        
                            <div class="col">
                                <%= evento.nmPessoa %>
                            </div>

                            <div class="col-2">
                                <input type="text" name="valorPago" 
                                value="<%= evento.valorPago%> " class="form-control money">
                            </div>

                            <div class="col">
                                <input type="text" name="observacao" value="<%= evento.observacao%>">
                            </div>
                        
                            <div class="col-1">
                                <button class="btn btn-success">Salvar</button>
                            </div>
                        </div>
                    </form>
                <% }) %>
            </div>
        </div>  
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/jQuery/jquery.mask.js"></script>
<script src="/jQuery/mascaras.js"></script>
