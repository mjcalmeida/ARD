<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<link rel="stylesheet" href="/bootstrap-4.5.2-dist/css/bootstrap.css">
<link rel="stylesheet" href="/css/estilo.css">
<body>
    <hr>
    <div class="container">
        <div class="card">
            <div class="card-header"><h3>Roda de Cura ( <%= dataEvento %> )</h3></div>
            
            <div class="card-body">
                <a href="../pessoas/cadRodaDia/<%= dataEventoSelecao %>" class="btn btn-primary xpto" style="margin-bottom: 15px;">Nova Pessoa</a>
                <div class="row">
                    <div class="col-1 xpto text-center">#</div>
                    <div class="col xpto">Nome</div>                    
                    <div class="col-2 xpto">Contrib.</div>
                    <div class="col xpto">Observações</div>
                    <div class="col-1 xpto">Ação</div>
                </div>
                <hr>
                <% eventosRoda.forEach(evento => {  %>
                <form method="POST" action="../listas/cadPresenca" style="margin-bottom: 5px!important;">
                        <div class="row">
                            <div class="col-1">
                                <input type="hidden" name="pessoaId"   value="<%= evento.pessoaId %>"/>
                                <input type="hidden" name="eventoId"   value="<%= evento.eventoId %>"/>
                                <input type="hidden" name="dataEvento" value="<%= dataEvento %>"/>

                                <input type="checkbox" name="presenca" <%= evento.presenca == 1 ? "checked" : "" %>/>
                            </div>
                        
                            <div class="col xpto" style="font-size: smaller!important;" >
                                <%= evento.nmPessoa %>
                            </div>

                            <div class="col-1 xpto" style="margin-left:-30px;margin-right:5px;">
                                <input type="text" name="valorPago" 
                                value="<%= evento.valorPago%> " class="form-control money xpto margemValor">
                            </div>

                            <div class="col xpto"  style="margin-right:5px;">
                                <input type="text" class="form-control xpto margemObs" name="observacao" value="<%= evento.observacao%>">
                            </div>
                        
                            <div class="col-1 xpto">
                                <button class="btn btn-success xpto margemBotao">Salvar</button>
                            </div>
                        </div>
                    </form>
                <% }) %>
            </div>
        </div>  
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/jQuery/jquery.inputmask.bundle.js"></script>
<script src="/jQuery/mascaras.js"></script>

<script>
        function confirmarDelecao(event, form){
        event.preventDefault();
        var decisao = confirm("Confirma ?");

        if (decisao){
            form.submit();
        }        
    }
</script>