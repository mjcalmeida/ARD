<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<link rel="stylesheet" href="/bootstrap-4.5.2-dist/css/bootstrap.css">
<link rel="stylesheet" href="/css/estilo.css">
<body>
    <div class="container semPadding">
        <div class="d-flex mt-5 justify-content-center">
            <div class= "card card-custom mx-2 mb-1 semPadding acertaMargens" >
                <div class="card-header">
                    <div style="text-align:center"><h3>Eventos</h3></div>
                </div>

                <div class="card-body">
                    <div class="row wrapper mb-4 border-bottom white-bg page-heading"> 
                        <div class="card acertaMargens">
                            <div class="card-header ">
                                <div class="col col-custom mx-3 mb-1 fixStyle" style="text-align: center; font-weight: bold; font-size:12px!important;">
                                    <b>Quantidade de Pessoas</b>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: center!important;"><b>Data</b></div>
                                    <div class="col-3 card-custom mx-1 mb-1 xpto" style="text-align: left!important;"><b>Evento</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Xamãs</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Conv.</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Total</b></div>
                                </div>
                                <% for(evento of data) { %>
                                    <div class="row">                                        
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: center"> 
                                            <a href="./listas/<%= evento[6] %> / <%= evento[8] %>"><%= evento[7] %></a>
                                        </div>
                                        <div class="col-4 card-custom mx-1 mb-1 xpto" style="text-align: left"><%= evento[9] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right"><%= evento[2] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right"><%= evento[1] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right"><%= (parseInt(evento[1]) + parseInt(evento[2])) %></div>
                                    </div>    
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="row wrapper border-bottom mt-4 white-bg page-heading">
                        <div class="card acertaMargens">
                            <div class="card-header ">
                                <div class="col col-custom mx-3 mb-1 fixStyle" style="text-align: center; font-weight: bold; font-size:12px!important;">
                                    <b>Contribuições</b>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: left!important;"><b>Data</b></div>
                                    <div class="col-3 card-custom mx-1 mb-1 xpto" style="text-align: left!important;"><b>Evento</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Xamã</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Conv.</b></div>
                                    <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important;"><b>Total</b></div>
                                </div>
                                <% for(evento of data) { %>
                                    <div class="row">
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: left!important;"> 
                                            <a href="./listas/<%= evento[6] %>"><%= evento[7] %></a>
                                        </div>
                                        <div class="col-3 card-custom mx-1 mb-1 xpto" style="text-align: left!important;"><%= evento[9] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align:  right!important;"><%= evento[4] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align: right!important"><%= evento[3] %></div>
                                        <div class="col card-custom mx-1 mb-1 xpto" style="text-align:  right!important;"><%= evento[5] %></div>
                                    </div>    
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="wrapper border-bottom white-bg page-heading">
                    <div class="card semPadding">
                        <div class="card-header ">
                            <div class="col col-custom mx-3 mb-1 fixStyle" style="text-align: center; font-weight: bold; font-size:12px!important;">
                                <b>Saldos</b>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-1 card-custom mx-2 mb-1 xpto"></div>
                                <div class="col card-custom mx-6 mb-1 xpto " style="text-align: left!important;">
                                    <b>Nome</b>
                                </div>
                                <div class="col-2 card-custom mx-6 mb-1 xpto " style="text-align: right;">
                                    <b>Saldo</b>
                                </div>
                                <div class="col-2 card-custom mx-2 mb-1 xpto"></div>
                            </div>

                            <% for(saldo of saldos) { %> 
                        
                                <div class="row">
                                    <div class="col-1 card-custom mx-2 mb-1 xpto"></div>
                                    <div class="col card-custom mx-6 mb-1 xpto " style="text-align: left;">
                                        <%= saldo.nmPessoa %>
                                    </div>
                                    <div class="col-2 card-custom mx-6 mb-1 xpto " style="text-align: right">
                                        <%= saldo.Saldo %>
                                    </div>
                                    <div class="col-2 card-custom mx-2 mb-1 xpto"></div>
                                </div>
                            <% } %>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>
</body>

<%- include ('partials/footer.ejs') %>

<script src="/jQuery/jquery-3.1.1.min.js"></script>
<script src="/jQuery/jquery.inputmask.bundle.js"></script>
<script src="/jQuery/mascaras.js"></script>