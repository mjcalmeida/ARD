<!DOCTYPE HTML>
<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<link rel="stylesheet" href="/bootstrap-4.5.2-dist/css/bootstrap.css">

<body>
    <hr>
    <div class="container">
        <div class="card">
            <div class="card-header"><h3>Novo Email</h3></div>
            <div class="card-body">
                <form method="POST" action="emails/save">
                    <div class="col-12"><BR><label>Título do Email</label></div>
                    <div class="col-12">
                        <input class="form-control" type="text" name="titulo" placeholder="Digite o Título do Email">
                    </div>
                    <div class="col-12"><BR><label>Corpo do Email</label></div>
                    <div class="col-12">
                        <textarea id="article" class="form-control" placeholder="Escreva o Email aqui" name="body">
                        </textarea>
                    </div>
                    <div class="col-12">
                        <BR><button class="btn btn-success">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        language: "pt_BR",
        plugins: [ 'advlist autolink link image list print preview hr searchreplace wordcount fullscreen insertdatetime midia save table paste emoticons']
    })
</script>