<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar.ejs') %>

<body>
    <div id="wrapper">
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2>Edição do Evento</h2>
                <a href="index.html">Home</a>
            </div>
            <div class="col-lg-2">
            </div>
        </div>

        <div class="wrapper wrapper-content1">
            <div class="col-xs-7">
                <div class="row animated fadeInRight">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Cadastro</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-3">Nome do Evento</div>
                                <div class="col-xs-9">
                                    <input type="hidden" name="id" value="<%= evento.id %>">
                                    <input type="text" placeholder="Digite o nome do Evento" 
                                        name="nomeEvento" class="form-control"
                                        value="<%= evento.nomeEvento %>">   
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Periodicidade</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="Periodicidade" 
                                        name="periodicidade" class="form-control"
                                        value="<%= evento.periodicidade %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Próximo Evento</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="__/__/____" 
                                    name="dataProximoEvento" class="form-control date"
                                    value="<%= evento.dataProximoEvento %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Horário</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="__:__" 
                                    name="horaProximoEvento" class="form-control timeHM"
                                    value="<%= evento.horaProximoEvento %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Mínimo</div>
                                <div class="col-xs-9">
                                        <input type="text" placeholder="0" 
                                        name="numMinimo" class="form-control int3"
                                        value="<%= evento.numMinimo %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Máximo</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="0" 
                                    name="numMaximo" class="form-control int3"
                                    value="<%= evento.numMaximo %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Valor Convidado</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="0,00" 
                                    name="valorConvidado" class="form-control money"
                                    value="<%= evento.valorConvidado %>">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">Valor Xamã</div>
                                <div class="col-xs-9">
                                    <input type="text" placeholder="0,00"
                                        name="valorXama" class="form-control money"
                                        value="<%= evento.valorXama %>">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="wrapper wrapper-content">
            <div class="row animated fadeInRight">
                <div class="col-xs-5" style="margin-top: -10px;">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Timeline</h5>
                            <div class="ibox-tools">
                                <button type="button" class="btn btn-xs btn-info">Novo</button>
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>

                        <div class="ibox-content inspinia-timeline">
                            <% for(var item=0; item < timeline.length; item++) { %>
                            <div class="timeline-item">
                                <div class="row">
                                    <div class="col-xs-5" style="margin-top: 15px;">
                                        <%
                                            var icone = "";
                                            if(timeline[item].Acao = "Email", icone="fa fa-envelope");
                                            if(timeline[item].Acao = "Relatorio", icone="fa fa-envelope");
                                            if(timeline[item].Acao = "Caixa Postal", icone="fas fa-mailbox");
                                        %>

                                        <i class="<%= icone %>"></i>
                                        <%= timeline[item].Acao %>
                                        <br/>
                                        <%
                                            var ad = 1;
                                            if(timeline[item].antesDepois = "-", ad = -1)
                                            var dataEmissao = evento.dataProximoEvento.substring(10,6)+"-"+
                                                              evento.dataProximoEvento.substring(3,5)+"-"+
                                                              evento.dataProximoEvento.substring(0,2);
                                        %>
                                        <small class="fas fa- text-navy"><%= dataEmissao %></small>
                                    </div>
                                    <div class="col-xs-7 content no-top-border">
                                        <p class="m-b-xs"><strong><h3><%= timeline[item].Titulo %></h3></strong></p>
                                        <p><%= timeline[item].antesDepois %><%= timeline[item].quantidade %>&nbsp<%= timeline[item].unidade %></p>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

<%- include ('../partials/footer.ejs') %>

